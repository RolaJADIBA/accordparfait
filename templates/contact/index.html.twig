{% extends 'base.html.twig' %}

{% block title %}Contactez-Nous!{% endblock %}

{% block body %}

<div class="container">
	<div class="row justify-content-center">

		<div class="col-lg-7 col-md-12 col-sm-12">
            <div class="contact mt-5 mx-auto p-3 border border-2" style="background-color: #ffccff">
                <div class="text-center mt-3">
                    <h3 class="sous-titre">Contactez-Nous</h3>
                </div>

                <div class="p-3 border border-1">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                    <div class="mt-3">
                        {{ form_widget(form.title, { 'attr': { 'class':'form-control' , 'placeholder' : 'Objet de votre message'} }) }}
                    </div>
                    <div class="mt-3">
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder' : 'Votre adresse email'} }) }}
                    </div>
                    <div class="mt-3">
                        {{ form_widget(form.message, { 'attr': { 'class':'form-control', 'placeholder' : 'Votre message', 'rows': 6} }) }}
                    </div>
                    <div class="row">
                        <button class="btn btn-sm mt-3" style="background-color: #cc00cc; color: #fff; font-weight: bold;" type="submit">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

		<div class="col-lg-5 col-md-12 col-sm-12">
            <div class="mt-5">
                <div class="card mx-auto cart" style="background-color: #ffccff">
                    <div class="card-body">
                        {# <h5 class="card-title sou-titre text-center"><strong>NOS ACTIONS</strong></h5> #}
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10622.496249376733!2d4.082269999999994!3d48.271608750000006!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47ee99075939e5ab%3A0xaaa283d63fd6575!2sL&#39;Accord%20Parfait!5e0!3m2!1sfr!2sfr!4v1662121344576!5m2!1sfr!2sfr" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                      <div class="card-footer text-center">
                        <p style="font-size: 0.9em;">Lignes 6 et 11 - Arrêt Québec</p>
                        <p style="font-size: 0.9em;">Ligne 2 - Arrêt Magasins de l'avenue</p>
                        <p><strong style="color: #cc00cc">Téléphone : 03.25.80.16.74</strong></p>
                      </div>

                </div>
            </div>
        </div>
	</div>
</div>

{% include "footer/footer.html.twig" %}
{% endblock %}
