{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

<main class="login">

	<section>
		<div class="imgBx">
			<img src="{{asset('images/login.jpeg')}}" alt="logo">
		</div>

		<div class="contentBx">
			<div class="formBx">

				<h2>Réinitialisez votre mot de passe</h2>

				{{ form_start(resetForm) }}

				<div class="inputBx">
					{{ form_row(resetForm.plainPassword) }}
				</div>

				<div class="inputBx">
					<button>Réinitialiser le mot de passe</button>
				</div>

				{{ form_end(resetForm) }}
			</div>
		</div>
	</section>

</main>


{% endblock %}
