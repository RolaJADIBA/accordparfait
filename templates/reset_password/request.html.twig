{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<main class="login">

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<section>
		<div class="imgBx">
			<img src="{{asset('images/login.jpeg')}}" alt="logo">
		</div>

		<div class="contentBx">
			<div class="formBx">

				<h2>Réinitialisez votre mot de passe</h2>

				{{ form_start(requestForm) }}

				<div class="inputBx">

					{{ form_row(requestForm.email) }}
					<div>
						<small>
							Entrez votre adresse e-mail et nous vous enverrons un
							                            lien pour réinitialiser votre mot de passe.
						</small>
					</div>
				</div>

				<div class="inputBx">
					<button type="submit">Envoyer un e-mail de réinitialisation du mot de passe</button>
				</div>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</section>

</main>



{% endblock %}
