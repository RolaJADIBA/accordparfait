{% extends 'base_admin.html.twig' %}

{% block title %}index des Mobilites{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="mt-3">
            <h1>index des Mobilites ({{mobilites|length}})</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Images</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for mobilite in mobilites %}
                    <tr>
                        <td>{{ mobilite.id }}</td>
                        <td>{{ mobilite.titre }}</td>
                        <td>{{ mobilite.description }}</td>
                        {# <td>{{ mobilite.Images ? mobilite.Images|json_encode : '' }}</td> #}
                        <td>
                            <img src="{{ asset('images/mobilite/' ~ mobilite.images|first) }}" height="100" alt="{{mobilite.titre}}">
                        </td>
                        <td>
                            <a href="{{ path('mobilite_show', {'id': mobilite.id}) }}" class="btn btn-info btn-sm text-white"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('mobilite_edit', {'id': mobilite.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="col-md-2">
                <a href="{{ path('mobilite_new') }}" class="btn btn-warning text-white">Créer un nouveau</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
