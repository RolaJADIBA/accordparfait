{% extends 'base_admin.html.twig' %}

{% block title %}Jardin{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-3">

        <h3>Jardin Solidaire</h3>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ jardin.id }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ jardin.description }}</td>
                </tr>
                <tr>
                    <th>Images</th>
                    {# <td>{{ jardin.images ? jardin.images|json_encode : '' }}</td> #}
                    <td>
                        {% for image in jardin.images %}
                            <img src="{{ asset('images/jardin/' ~ image) }}" height="100" alt="{{jardin.id}}">
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-2">

            <a href="{{ path('jardin_index') }}" class="btn btn-warning btn-sm text-white mb-3">retour Ã  la liste</a>

            <a href="{{ path('jardin_edit', {'id': jardin.id}) }}" class="btn btn-secondary btn-sm">edit</a>

            {{ include('admin/jardin/_delete_form.html.twig') }}
            
        </div>
    </div>
</div>

{% endblock %}
