{% extends 'base_admin.html.twig' %}

{% block title %}Index des événements{% endblock %}

{% block body %}
<div class="container">
<div class="row mt-3">
    <h1>Evénements ({{evenements|length}})</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                {# <th>Description</th> #}
                <th>Image</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.titre }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                {# <td>{{ evenement.description }}</td> #}
                {# <td>{{ evenement.images ? evenement.images|json_encode : '' }}</td> #}
                <td>
                    <img src="{{asset('images/image_choisi/' ~ evenement.imageChoisi)}}" height="50" alt="{{evenement.titre}}">
                </td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" {{ (evenement.active) ? 'checked' : '' }} data-id="{{evenement.id}}">
                    </div>
                </td>
                <td>
                    <a href="{{ path('evenements_show', {'id': evenement.id}) }}"  class="btn btn-info btn-sm text-white"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('evenements_edit', {'id': evenement.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="col-md-2">
            <a href="{{ path('evenements_new') }}" class="btn btn-warning text-white">Créer un nouveau</a>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
    window.onload = () =>{
        let activer = document.querySelectorAll("[type=checkbox]");
        for(let bouton of activer){
            bouton.addEventListener("click", function (){
                let xmlhttp = new XMLHttpRequest;
                xmlhttp.open("get", `/admin/evenements/activer/${this.dataset.id}`)
					xmlhttp.send()
            })
        }
    }
</script>
{% endblock %}
