{% extends 'base_admin.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-3">
        <h3>L'Evenement: {{evenement.titre}}</h3>

        <table class="table table-sm mt-3">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ evenement.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ evenement.titre }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Image Choisi</th>
                    <td>
                        <img src="{{asset('images/image_choisi/' ~ evenement.imageChoisi)}}" height="100" alt="{{evenement.titre}}">
                    </td>
                </tr>

                <tr>
                    <th>Description</th>
                    <td>{{ evenement.description }}</td>
                </tr>
                <tr>
                    <th>Images</th>
                    {# <td>{{ evenement.images ? evenement.images|json_encode : '' }}</td> #}
                    <td>
                        {% for image in evenement.images %}
                            <img src="{{asset('images/evenements/' ~ image)}}" height="100" alt="{{image}}">
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="col-md-2">
            <a href="{{ path('evenements_index') }}" class="btn btn-warning btn-sm text-white">retour à la liste</a>

            <a href="{{ path('evenements_edit', {'id': evenement.id}) }}" class="btn btn-secondary btn-sm">Éditer</a>
            {{ include('admin/evenements/_delete_form.html.twig') }}

        </div>
    </div>
</div>

{% endblock %}
