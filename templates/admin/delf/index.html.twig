{% extends 'base_admin.html.twig' %}

{% block title %}Index des Delf{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Desciption</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for delf in delves %}
                <tr>
                    <td>{{ delf.id }}</td>
                    <td>
                        <img src="{{asset('images/delf/') ~ delf.image}}" height="100" alt="{{delf.image}}">
                    </td>
                    <td>{{ delf.desciption }}</td>
                    <td>
                        <a href="{{ path('delf_show', {'id': delf.id}) }}" class="btn btn-info btn-sm text-white"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('delf_edit', {'id': delf.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="col-md-2">
            <a href="{{ path('delf_new') }}" class="btn btn-warning text-white">Créer un nouveau</a>
        </div>
    </div>
</div>

{% endblock %}
