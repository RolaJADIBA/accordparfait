{% extends 'base_admin.html.twig' %}

{% block title %}index des numerique{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="mt-3">

            <h3>index des numerique ({{numeriques|length}})</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Descriptions</th>
                        <th>Images</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for numerique in numeriques %}
                    <tr>
                        <td>{{ numerique.id }}</td>
                        <td>{{ numerique.titre }}</td>
                        <td>{{ numerique.descriptions }}</td>
                        {# <td>{{ numerique.images ? numerique.images|json_encode : '' }}</td> #}
                        <td>
                            {# <img src="{{asset('images/numerique/' ~ numerique.images|first)}}" height="100" alt="{{numerique.titre}}"> #}
                        </td>
                        <td>
                            <a href="{{ path('numerique_show', {'id': numerique.id}) }}" class="btn btn-info btn-sm text-white"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('numerique_edit', {'id': numerique.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="col-md-2">
                <a href="{{ path('numerique_new') }}" class="btn btn-warning text-white">Créer un nouveau</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
