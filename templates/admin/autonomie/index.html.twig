{% extends 'base_admin.html.twig' %}

{% block title %}index des Autonomies{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-3">

        <h3>Autonomie et Insertion Sociale</h3>
    <div class="table-responsive-md">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for autonomie in autonomies %}
                <tr>
                    <td>{{ autonomie.id }}</td>
                    <td>{{ autonomie.titre }}</td>
                    <td>{{ autonomie.description }}</td>
                    <td>
                        <a href="{{ path('autonomie_show', {'id': autonomie.id}) }}" class="btn btn-info btn-sm text-white"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('autonomie_edit', {'id': autonomie.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        <div class="col-md-2">
            <a href="{{ path('autonomie_new') }}" class="btn btn-warning text-white">Créer un nouveau</a>
        </div>
    </div>
</div>
{% endblock %}
