{% extends 'base_admin.html.twig' %}

{% block title %}Complement{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-3">

    <h1>{{complement.titre}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ complement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ complement.description }}</td>
            </tr>
            <tr>
                <th>Images</th>
                {# <td>{{ jardin.images ? jardin.images|json_encode : '' }}</td> #}
                <td>
                    {% for image in complement.images %}
                        <img src="{{ asset('images/complement/' ~ image) }}" height="100" alt="{{complement.id}}">
                    {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>

    <div class="col-md-2">

        <a href="{{ path('complement_index') }}" class="btn btn-warning btn-sm text-white">retour Ã  la liste</a>

        <a href="{{ path('complement_edit', {'id': complement.id}) }}" class="btn btn-secondary btn-sm">edit</a>

        {{ include('admin/complement/_delete_form.html.twig') }}
    </div>
</div>
</div>


{% endblock %}
